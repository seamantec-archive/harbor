.row
  %ul
    -@errors.each do |msg|
      - msg.each do |m|
        %li.alert.alert-danger
          =m
.col-md-12
  = form_for(:demo, url:create_trial_licenses_path, html:{:class=>"form-horizontal"}) do |f|
    .form-group
      = f.label :email, class: "col-md-4 control-label"
      .col-md-4
        = f.email_field :email, :autofocus => true, :class=>"form-control" , value: @user.email
    .form-group
      = f.label :first_name, class: "col-md-4 control-label"
      .col-md-4
        = f.text_field :first_name,  :class=>"form-control" , value: @user.first_name
    .form-group
      = f.label :last_name, class: "col-md-4 control-label"
      .col-md-4
        = f.text_field :last_name, :class=>"form-control" , value: @user.last_name
    .col-md-8
      .pull-right
        = f.submit "Register", class:"btn btn-default"
