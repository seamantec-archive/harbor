.row
  %ul
    -@errors.each do |msg|
      - msg.each do |m|
        %li.alert.alert-danger
          =m
.row
  .col-md-4.text-right
    %h3
      Create demo license

  .col-md-12
    = form_for(:demo, url:create_demo_licenses_path, html:{:class=>"form-horizontal"}) do |f|
      .form-group
        = f.label :email, class: "col-md-2 control-label"
        .col-md-4
          = f.email_field :email, :autofocus => true, :class=>"form-control" , value: @user.email
      .form-group
        = f.label :first_name, class: "col-md-2 control-label"
        .col-md-4
          = f.text_field :first_name,  :class=>"form-control" , value: @user.first_name
      .form-group
        = f.label :last_name, class: "col-md-2 control-label"
        .col-md-4
          = f.text_field :last_name, :class=>"form-control" , value: @user.last_name
      .form-group
        .col-md-4.col-md-offset-3
          = recaptcha_tags
      .form-group
        .col-md-7.pull-right
          = f.submit "Save", class:"btn btn-default"
