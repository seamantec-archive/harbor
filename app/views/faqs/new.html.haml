.row
  .col-md-12
    = render :partial => "faqs/topic_errors"
    = form_for(@topic,  url: faqs_path, html: { class: "col-xs-12" }) do |f|
      .form-group
        = f.label :name, class: "control-label"
        = f.text_field :name, class: "form-control"
      = f.submit "Save", class:"btn btn-default"