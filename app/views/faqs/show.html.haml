.row
  .col-xs-12
    = render :partial => "faqs/topic_errors"
    = form_for(@topic,  url: faq_path(id: params[:id]), html: { class: "col-xs-12" }) do |f|
      .form-group
        = f.label :name, class: "control-label"
        = f.text_field :name, class: "form-control"
      = f.submit "Update", class:"btn btn-default"