.row
  %ul
    -@errors.each do |msg|
      - msg.each do |m|
        %li.alert.alert-danger
          =m
.row
  .col-md-12
    %h3
      Allocate license
    = form_for(:allocate, url:allocate_new_license_user_license_pool_path(user_id: @user.id, id:@license_pool.id), html:{:class=>"form-horizontal"}) do |f|
      .form-group
        = f.label :email, class: "col-md-2 control-label"
        .col-md-4
          = f.email_field :email, :autofocus => true, :class=>"form-control" , value: @customer.email
      .form-group
        = f.label :first_name, class: "col-md-2 control-label"
        .col-md-4
          = f.text_field :first_name,  :class=>"form-control" , value: @customer.first_name
      .form-group
        = f.label :last_name, class: "col-md-2 control-label"
        .col-md-4
          = f.text_field :last_name, :class=>"form-control" , value: @customer.last_name
      .form-group
        .col-md-7.pull-right
          = f.submit "Allocate", class:"btn btn-default"
