.row
  -@user.errors.full_messages.each do |msg|
    %li.alert.alert-danger
      =msg
.row
  .col-md-12
    = form_for(@user, url: change_password_user_path(id:@user.id), html:{:class=>"form-horizontal"}) do |f|
      .form-group
        = f.label :old_password  , :class=>"col-md-2 control-label"
        .col-md-4
          = f.password_field :old_password, :class=>"form-control"
      .form-group
        = f.label :password  , :class=>"col-md-2 control-label"
        .col-md-4
          = f.password_field :password, :class=>"form-control"
      .form-group
        = f.label :password_confirmation, :class=>"col-md-2 control-label"
        .col-md-4
          = f.password_field :password_confirmation , :class=>"form-control"
      %div= f.submit "Save", class:"btn btn-default"